@page
@model RickAndMortyWebApp.Pages.Characters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Alive Characters</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].OriginName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Characters) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                <img src="@item.Image" />
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
