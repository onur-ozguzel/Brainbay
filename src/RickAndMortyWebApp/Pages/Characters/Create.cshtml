@page
@model RickAndMortyWebApp.Pages.Characters.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Status" class="control-label"></label>
                <input asp-for="Character.Status" class="form-control" />
                <span asp-validation-for="Character.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Species" class="control-label"></label>
                <input asp-for="Character.Species" class="form-control" />
                <span asp-validation-for="Character.Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Type" class="control-label"></label>
                <input asp-for="Character.Type" class="form-control" />
                <span asp-validation-for="Character.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Gender" class="control-label"></label>
                <input asp-for="Character.Gender" class="form-control" />
                <span asp-validation-for="Character.Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Character.Episodes" class="control-label">Episodes</label>
                <button type="button" class="btn btn-primary mb-2" onclick="addEpisodeField()">Add Episode</button>

                <div id="episodes-container">
                    <!-- Dynamically added episode inputs will go here -->
                </div>

                <span asp-validation-for="Character.Episodes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.OriginName" class="control-label"></label>
                <input asp-for="Character.OriginName" class="form-control" />
                <span asp-validation-for="Character.OriginName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.OriginUrl" class="control-label"></label>
                <input asp-for="Character.OriginUrl" class="form-control" />
                <span asp-validation-for="Character.OriginUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.LocationName" class="control-label"></label>
                <input asp-for="Character.LocationName" class="form-control" />
                <span asp-validation-for="Character.LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.LocationUrl" class="control-label"></label>
                <input asp-for="Character.LocationUrl" class="form-control" />
                <span asp-validation-for="Character.LocationUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Image" class="control-label"></label>
                <input asp-for="Character.Image" class="form-control" />
                <span asp-validation-for="Character.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Url" class="control-label"></label>
                <input asp-for="Character.Url" class="form-control" />
                <span asp-validation-for="Character.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Created" class="control-label"></label>
                <input asp-for="Character.Created" class="form-control" />
                <span asp-validation-for="Character.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        let episodeIndex = 0;

        function addEpisodeField() {
            const container = document.getElementById("episodes-container");

            const div = document.createElement("div");
            div.className = "input-group mb-2";

            div.innerHTML = `
                <input name="Character.Episodes" class="form-control" placeholder="Enter episode" required />
                <button type="button" class="btn btn-danger" onclick="removeEpisodeField(this)">Remove</button>
            `;

            container.appendChild(div);
            episodeIndex++;
        }

        function removeEpisodeField(button) {
            button.parentElement.remove();
        }
    </script>
}
